@model UserCreateModel
@{
    Layout = "_Layout";
}

<!-- Masthead-->
<img style="width:1920px; height:72px" src="https://ticari.tarkett.com.tr/media/img/M/THH_25121916_25131916_25126916_25136916_001.jpg" />

<div class="mt-4" style="height:800px">
    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
        <div class="mb-3">
            <label>Adınız :</label>
            <input asp-for="@Model.Firstname" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Soyadınız :</label>
            <input asp-for="@Model.Surname" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Kullanıcı Adınız :</label>
            <input asp-for="@Model.Username" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Email Adresiniz :</label>
            <input asp-for="@Model.Email" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Şifreniz :</label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Şifreniz Tekrar :</label>
            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
        </div>

        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </div>

        <div class="text-danger" asp-validation-summary="All">
        </div>
    </form>
</div>